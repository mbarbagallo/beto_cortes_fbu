<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.RecommendationFragment" >


    <androidx.cardview.widget.CardView
        android:id="@+id/cvExteriorCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="#38a3a5"
        android:translationZ="-15dp"
        app:cardCornerRadius="15dp">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:backgroundTint="#c7f9cc"
            app:cardCornerRadius="15dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <TextView
                    android:id="@+id/tvYourPhoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginEnd="10dp"
                    android:text="Your photo!"
                    android:textAllCaps="false"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/ivSongPhoto"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_below="@+id/tvYourPhoto"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"

                    tools:src="@tools:sample/avatars" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>


    <com.wenchao.cardstack.CardStack
        android:id="@+id/cardStackContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:gravity="center"
        android:paddingTop="240dp"
        android:translationZ="50dp"
        app:card_enable_rotation="true"
        app:card_gravity="bottom"
        app:card_margin="50dp"
        app:card_stack_size="2">

    </com.wenchao.cardstack.CardStack>

    <Button
        android:id="@+id/btnRetakePhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cvExteriorCard"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:text="Take another\nphoto"
        android:translationZ="-15dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnFetchMoreSongs"
        android:layout_below="@+id/btnRetakePhoto"
        android:text="Get more songs"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        />


</RelativeLayout>