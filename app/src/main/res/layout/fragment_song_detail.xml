<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.SongDetailFragment">


    <ImageView
        android:id="@+id/ivSongDetailPhoto"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        tools:src="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/ivSongDetailCover"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:layout_below="@+id/ivSongDetailPhoto"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvSongDetailName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivSongDetailCover"
        android:layout_alignStart="@+id/ivSongDetailCover"
        android:layout_alignEnd="@+id/ivSongDetailCover"
        android:layout_marginStart="0dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="0dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:text="Song Name" />

    <TextView
        android:id="@+id/tvSongDetailArtist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvSongDetailName"
        android:layout_alignStart="@+id/tvSongDetailName"
        android:layout_alignEnd="@+id/tvSongDetailName"
        android:layout_marginStart="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="0dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="24sp"
        tools:text="Song Artist" />

    <TextView
        android:id="@+id/tvSongDetailAlbum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvSongDetailArtist"
        android:layout_alignStart="@+id/tvSongDetailArtist"
        android:layout_alignEnd="@+id/tvSongDetailName"
        android:layout_marginStart="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="0dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="24sp"
        tools:text="Song Album" />
</RelativeLayout>