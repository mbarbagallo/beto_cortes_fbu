<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.UserProfileFragment">


    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ivUserImage"
        android:layout_alignBottom="@+id/ivUserImage"
        android:layout_marginStart="-25dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/ivUserImage"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        tools:text="Hello {{user name}}!" />

    <ImageButton
        android:id="@+id/btnLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="35dp"
        android:backgroundTint="#00000000"
        android:src="@drawable/ic_baseline_login_24"
        app:tint="@color/teal_700" />

    <Button
        android:id="@+id/btnResetColorForm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/cardSpinner8"
        android:layout_marginTop="60dp"
        android:text="Color form activity" />

    <ImageView
        android:id="@+id/ivUserImage"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="30dp"
        android:src="@drawable/ic_baseline_account_circle_24"
        app:tint="@color/teal_700" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardSpinner1"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_below="@+id/ivUserImage"
        android:layout_alignEnd="@+id/btnResetColorForm"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="120dp"
        >

        <TextView
            android:id="@+id/emotionName1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            tools:text="Emotion"
            android:paddingEnd="30dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/black"
            android:padding="5dp" />

        <ImageView
            android:id="@+id/colorCircle1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:layout_gravity="end"
            android:src="@drawable/ic_baseline_brightness_1_24"
            />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardSpinner2"
        android:layout_width="0dp"
        android:layout_height="45dp"
